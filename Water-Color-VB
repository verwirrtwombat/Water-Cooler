Module Program
    Sub Main(args As String())
        Dim waterWeight As Integer = 41.7

        Console.Write("Did you empty the water: ")
        Dim waterState As String = Console.ReadLine()

        If waterState = "Yes" Then
            Console.WriteLine("You probably should, but first another question.")
            Console.WriteLine("How much do you weigh: ")
            Dim weightState As Integer = Console.ReadLine()

            If weightState < waterWeight * 2.25 Then
                Console.WriteLine("Don't be silly. You'll be crushed!")
            Else
                Console.WriteLine("Of course you should!")
            End If
        End If

        Console.Write("Press any key to exit...")
        Console.ReadKey(True)

    End Sub
End Module
